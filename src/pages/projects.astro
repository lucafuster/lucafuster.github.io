---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { useTranslations } from '../i18n/ui';

const lang = 'en';
const t = useTranslations(lang);

const projects = [
    {
        title: "Hippocrate Project",
        category: "Entrepreneurship",
        desc: "Co-founded a SaaS medical pre-diagnostic solution (-15% medical time). Business Plan (€284k), Pricing Strategy, and Product Roadmap.",
        tags: ["Business Plan", "SaaS", "Product"],
        color: "text-emerald-500"
    },
    {
        title: "Traceability Tool",
        category: "Development",
        desc: "For SOS Oxygène: Developed a Python/SQL tool reducing logistics management time by 80%. Infrastructure security audit.",
        tags: ["Python", "SQL", "Audit"],
        color: "text-blue-500"
    },
    {
        title: "INTv Technical Lead",
        category: "Audiovisual",
        desc: "Managed live coverage for Institut Polytechnique de Paris events (300+ attendees). Guaranteed service quality and deadlines.",
        tags: ["Leadership", "Technical"],
        color: "text-violet-500"
    }
];
---

<Layout title="Projects - Luca Fuster" lang={lang}>
    <Navbar lang={lang} />

    <main class="max-w-5xl mx-auto w-full px-6 py-10 pb-24">
        
        <div class="animate-enter mb-12 text-center md:text-left">
            <span class="text-xs font-bold text-slate-400 uppercase tracking-widest pl-1">Portfolio</span>
            <h1 class="text-4xl md:text-5xl font-light mt-2 text-slate-700">Selected <span class="font-normal text-violet-500">Projects</span></h1>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {projects.map((proj, i) => (
                <div 
                    class="animate-enter group flex flex-col justify-between p-6 rounded-3xl bg-slate-100 neu-shadow hover:-translate-y-2 transition-all duration-300"
                    style={`animation-delay: ${(i + 1) * 150}ms`}
                >
                    <div>
                        <div class="flex justify-between items-start mb-4">
                            <span class="text-xs font-bold text-slate-400 uppercase tracking-wider">{proj.category}</span>
                            <div class={`w-2 h-2 rounded-full ${proj.color.replace('text-', 'bg-')}`}></div>
                        </div>

                        <h3 class={`text-xl font-medium ${proj.color} mb-3 group-hover:brightness-110 transition-all`}>
                            {proj.title}
                        </h3>
                        
                        <p class="text-slate-500 text-sm leading-relaxed mb-6 font-light">
                            {proj.desc}
                        </p>
                    </div>

                    <div class="flex flex-wrap gap-2">
                        {proj.tags.map(tag => (
                            <span class="px-3 py-1 text-xs font-medium text-slate-500 rounded-full neu-shadow-inset">
                                {tag}
                            </span>
                        ))}
                    </div>
                </div>
            ))}
        </div>

    </main>
</Layout>