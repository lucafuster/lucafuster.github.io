---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import { useTranslations } from '../../i18n/ui';

const lang = 'en'; 
const t = useTranslations(lang);
---

<Layout title="Portfolio" lang={lang}>
    <Navbar lang={lang} />
    
    <main class="flex-grow flex flex-col items-center justify-center px-4 -mt-12">
        
        <!-- Avatar / Photo de profil -->
        <div class="animate-enter w-40 h-40 md:w-48 md:h-48 rounded-full mb-6 neu-shadow neu-hover flex items-center justify-center overflow-hidden transition-all duration-200">
            <img 
                src="/profile.png" 
                alt="Luca Fuster" 
                class="w-full h-full object-cover"
            />
        </div>

        <!-- Nom avec accent violet -->
        <h1 class="animate-enter delay-100 text-5xl md:text-7xl font-light mb-4 text-center tracking-tight">
            <span class="text-slate-700">Luca</span> 
            <span class="font-normal text-slate-500">Fuster</span>
        </h1>

        <p class="animate-enter delay-200 text-lg md:text-xl text-slate-500 mb-8 font-light text-center max-w-lg leading-relaxed">
            Engineering Student & Junior IT Consultant
        </p>

        <!-- Boutons neumorphiques -->
        <div class="animate-enter delay-300 flex flex-wrap justify-center gap-3 w-full max-w-md">
            <a href="https://linkedin.com/in/tonprofil" target="_blank" 
               class="px-4 py-2 rounded-full flex items-center gap-2 text-slate-500 font-medium neu-shadow neu-hover">
               <span>LinkedIn</span>
            </a>
            
            <a href="https://github.com/tonprofil" target="_blank"
               class="px-4 py-2 rounded-full flex items-center gap-2 text-slate-500 font-medium neu-shadow neu-hover">
               <span>GitHub</span>
            </a>

            <a href="mailto:luca.fuster@telecom-sudparis.eu"
               class="px-4 py-2 rounded-full flex items-center gap-2 text-slate-500 font-medium neu-shadow neu-hover hover:text-violet-500">
               <span>Contact</span>
            </a>
        </div>
    </main>

    <footer class="bg-transparent w-full py-4 mt-auto">
        <div class="max-w-4xl mx-auto px-6 text-xs text-slate-400 text-center">
            &copy; 2025 Luca Fuster
        </div>
    </footer>
</Layout>