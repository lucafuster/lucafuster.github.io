        <!-- Experience -->
        <div class="space-y-4 mb-10">
            <h2 class="animate-enter delay-100 text-xl font-light text-slate-700 mb-4 tracking-wide">Experience</h2>
            {experiences.map((exp, i) => (
                <div 
                    class="animate-enter group block p-5 rounded-2xl neu-shadow neu-hover transition-all duration-200"
                    style={`animation-delay: ${(i + 2) * 100}ms`}
                >
                    <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-normal text-slate-700 group-hover:text-violet-500">{exp.title}</h3>
                        <span class="text-xs text-slate-400 whitespace-nowrap ml-4 font-light">{exp.date}</span>
                    </div>
                    <p class="text-sm text-slate-600 font-light mb-2">{exp.company}</p>
                    <p class="text-sm text-slate-500 leading-relaxed font-light">{exp.desc}</p>
                </div>
            ))}
        </div>

        <!-- Education -->
        <div class="space-y-4">
            <h2 class="animate-enter delay-200 text-xl font-light text-slate-700 mb-4 tracking-wide">Education</h2>
            {education.map((edu, i) => (
                <div 
                    class="animate-enter flex flex-col sm:flex-row gap-4 p-4 rounded-2xl neu-shadow neu-hover transition-all duration-200"
                    style={`animation-delay: ${(i + 5) * 100}ms`}
                >
                    <div class="sm:w-1/4">
                        <p class="text-sm font-medium text-slate-700">{edu.date}</p>
                        <p class="text-sm text-slate-400 font-light mt-1">{edu.school}</p>
                    </div>
                    <div class="sm:w-3/4">
                        <h3 class="text-base font-normal text-slate-700">{edu.degree}</h3>
                        <p class="text-sm text-slate-500 mt-1 font-light leading-relaxed">{edu.desc}</p>
