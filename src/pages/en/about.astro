<Layout title="About - Luca Fuster" lang={lang}>
    <Navbar lang={lang} />

    <main class="max-w-3xl mx-auto w-full px-6 py-8 md:py-10 pb-16">
        
        <!-- Profile Header -->
        <div class="animate-enter mb-8 pb-8">
            <h1 class="text-4xl md:text-5xl font-light mt-3 text-slate-700 tracking-tight">About me</h1>
            <div class="mt-6 space-y-4 text-base leading-relaxed text-slate-600">
