---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import { useTranslations } from '../../i18n/ui';

const lang = 'fr';
const t = useTranslations(lang);

const experiences = [
    { 
        title: "Président de Liste BDE", 
        company: "Télécom SudParis", 
        date: "Sept. 2024 - Présent", 

        tasks: [
            "Pilotage d'une équipe de 38 personnes pour l'organisation d'événements majeurs (250+ participants), assurant la sécurité et la logistique.",
            "Optimisation de la gestion financière d'un budget de 15 000 € via la mise en place de processus de trésorerie rigoureux.",
            "Négociation de contrats de sponsoring avec des entreprises partenaires (ex: Talan) pour financer les activités."
        ]
    },
    { 
        title: "Stagiaire IT & Transformation Digitale", 
        company: "SOS Oxygène", 
        date: "Juin 2024 - Août 2024", 
        
        tasks: [
            "Réduction de 80% du temps de gestion logistique via le développement d'une solution de traçabilité automatisée (Python, SQL, code-barres).",
            "Sécurisation des données sensibles par la réalisation d'un audit complet de l'infrastructure et la correction des vulnérabilités identifiées.",
            "Accompagnement de la transition numérique des techniciens terrain par la formation aux nouveaux outils mobiles (OxyMobile)."
        ]
    }
];

const education = [
    {
        school: "Télécom SudParis (IP Paris)",
        degree: "Diplôme d'ingénieur généraliste (Master 2)",
        date: "2024 - 2028",
        desc: "Cours pertinents : systèmes d'information, bases de données (SQL), réseaux, algorithmique, gestion de projet."
    },
    {
        school: "Lycée Condorcet",
        degree: "Classes préparatoires (MPSI / MP*)",
        date: "2021 - 2024",
        desc: "Formation intensive en mathématiques et physique. Baccalauréat mention très bien."
    }
];
---

<Layout title="À propos - Luca Fuster" lang={lang}>
    <Navbar lang={lang} />

    <main class="max-w-4xl mx-auto w-full px-6 py-10 pb-24 mt-8">
        
       
        <div class="animate-enter mb-16 text-center md:text-left">
            <span class="text-xs font-bold text-slate-400 uppercase tracking-widest pl-1">À propos de moi</span>
            
            <p class="mt-6 text-slate-500 leading-relaxed text-lg font-light max-w-3xl">
                Je suis Luca Fuster, un étudiant ingénieur à <strong>Télécom SudParis</strong>, passionné par la transformation digitale et l'entrepreneuriat.
                Je recherche un stage de césure de 6 mois en <strong class="text-violet-500 font-medium">audit IT / conseil</strong> à partir de septembre 2026.
                J'ai un profil hybride alliant compétences techniques (data/dev) et vision business.
            </p>
            
            
            <div class="mt-8 flex flex-wrap justify-center md:justify-start gap-4">
                <a href={import.meta.env.BASE_URL + "/Luca_Fuster-Resume_en.pdf"} download="CV_Luca_Fuster.pdf" class="inline-flex items-center gap-2 px-6 py-3 bg-slate-100 text-slate-600 rounded-full text-sm font-medium neu-shadow neu-hover transition-all group">
                    <span class="group-hover:text-violet-500 transition-colors">Télécharger le CV</span>
                </a>
                
                <a href={import.meta.env.BASE_URL + "/Luca_Fuster-Resume_en.pdf"} target="_blank" class="inline-flex items-center gap-2 px-6 py-3 bg-transparent border border-slate-200 text-slate-500 rounded-full text-sm font-medium hover:bg-slate-50 transition-all">
                    <span>Consulter</span>
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 gap-12">
            

            <div class="animate-enter delay-100">
                <h2 class="text-2xl font-normal text-slate-700 mb-8 pl-2 border-l-4 border-violet-500">Expérience Professionnelle</h2>
                
                <div class="space-y-8">
                    {experiences.map((exp, i) => (
                        <div class="group p-8 rounded-3xl bg-slate-100 neu-shadow transition-all duration-300 hover:translate-x-1">
                            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4 gap-2">
                                <div>
                                    <h3 class="text-xl font-medium text-violet-500">{exp.title}</h3>
                                    <p class="text-sm font-bold text-slate-600 uppercase tracking-wide mt-1">{exp.company}</p>
                                </div>
                                <span class="text-xs font-bold text-slate-400 bg-white px-4 py-2 rounded-full neu-shadow-inset whitespace-nowrap">
                                    {exp.date}
                                </span>
                            </div>
                            

                            <ul class="space-y-3 mt-4">
                                {exp.tasks.map(task => (
                                    <li class="flex items-start gap-3 text-slate-500 font-light leading-relaxed">
                                        <span class="mt-2 w-1.5 h-1.5 bg-violet-400 rounded-full flex-shrink-0"></span>
                                        <span>{task}</span>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))}
                </div>
            </div>


            <div class="animate-enter delay-200">
                <h2 class="text-2xl font-normal text-slate-700 mb-8 pl-2 border-l-4 border-violet-500">Formation</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {education.map(edu => (
                        <div class="p-6 rounded-2xl bg-slate-100 neu-shadow flex flex-col h-full">
                            <div class="flex justify-between items-start mb-2">
                                <h3 class="text-base font-bold text-slate-700">{edu.school}</h3>
                                <span class="text-xs text-slate-400">{edu.date}</span>
                            </div>
                            <div class="text-sm text-violet-500 mb-4 font-medium">{edu.degree}</div>
                            <p class="text-sm text-slate-500 leading-relaxed font-light mt-auto border-t border-slate-200 pt-3">
                                {edu.desc}
                            </p>
                        </div>
                    ))}
                </div>
            </div>

        </div>
    </main>
</Layout>