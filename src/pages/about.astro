---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { useTranslations } from '../i18n/ui';

const lang = 'en';
const t = useTranslations(lang);

const experiences = [
    { 
        title: "Student Union President", 
        company: "Télécom SudParis", 
        date: "2024 - Present", 
        desc: "Managed a team of 38 people. Rigorous management of a €15k budget. Organized major events (250+ attendees) and negotiated corporate sponsorships." 
    },
    { 
        title: "IT & Audit Intern", 
        company: "SOS Oxygène", 
        date: "Summer 2024", 
        desc: "Developed a traceability solution (-80% management time). Infrastructure security audit and change management support (OxyMobile)." 
    }
];

const education = [
    {
        school: "Télécom SudParis (IP Paris)",
        degree: "Master of Science in Engineering",
        date: "2024 - 2028",
        desc: "Information Systems, SQL, Networks, Project Management."
    },
    {
        school: "Lycée Condorcet",
        degree: "CPGE MP* (Maths & Physics)",
        date: "2021 - 2024",
        desc: "Intensive training in Mathematics and Physics. High Honors."
    }
];
---

<Layout title="About - Luca Fuster" lang={lang}>
    <Navbar lang={lang} />

    <main class="max-w-5xl mx-auto w-full px-6 py-10 pb-24">
        
        <div class="animate-enter mb-16 text-center md:text-left">
            <span class="text-xs font-bold text-slate-400 uppercase tracking-widest pl-1">About me</span>
            
            <p class="mt-6 text-slate-500 leading-relaxed text-lg font-light max-w-3xl">
                I am Luca Fuster, a <strong>Télécom SudParis</strong> engineering student, passionate about digital transformation and entrepreneurship. I am looking for a 6-month gap internship in 
                <strong class="text-violet-500 font-medium">IT audit /consulting</strong> from September 2026. 
                I have a hybrid profile combining technical skills (data/dev) and business vision.
            </p>
            
            <div class="mt-8 flex flex-wrap gap-4">
                <a href={import.meta.env.BASE_URL + "/Luca_Fuster-Resume_en.pdf"} download="CV_Luca_Fuster.pdf" class="inline-flex items-center gap-2 px-6 py-3 bg-slate-100 text-slate-600 rounded-full text-sm font-medium neu-shadow neu-hover transition-all group">
                    <span class="group-hover:text-violet-500 transition-colors">Download Resume</span>
                </a>
                
                <a href={import.meta.env.BASE_URL + "/Luca_Fuster-Resume_en.pdf"} target="_blank" class="inline-flex items-center gap-2 px-6 py-3 bg-transparent border border-slate-200 text-slate-500 rounded-full text-sm font-medium hover:bg-slate-50 transition-all">
                    <span>View Online</span>
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-12 gap-12">
            
            <div class="md:col-span-5 animate-enter delay-100">
                <h2 class="text-xl font-normal text-slate-700 mb-6 pl-1 flex items-center gap-2">
                    Education
                </h2>
                <div class="space-y-6">
                    {education.map(edu => (
                        <div class="p-6 rounded-2xl bg-slate-100 neu-shadow">
                            <div class="text-xs font-medium text-slate-400 mb-2">{edu.date}</div>
                            <h3 class="text-sm font-bold text-slate-700 mb-1">{edu.school}</h3>
                            <div class="text-sm text-violet-500 mb-3">{edu.degree}</div>
                            <p class="text-xs text-slate-500 leading-relaxed opacity-90">{edu.desc}</p>
                        </div>
                    ))}
                </div>
            </div>

            <div class="md:col-span-7 animate-enter delay-200">
                <h2 class="text-xl font-normal text-slate-700 mb-6 pl-1">Experience</h2>
                <div class="space-y-6">
                    {experiences.map((exp, i) => (
                        <div class="group p-6 md:p-8 rounded-3xl bg-slate-100 neu-shadow transition-all duration-300" style={`animation-delay: ${(i + 3) * 100}ms`}>
                            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-3 gap-2">
                                <h3 class="text-lg font-medium text-violet-500 group-hover:text-violet-600 transition-colors">{exp.title}</h3>
                                <span class="text-xs font-medium text-slate-400 bg-slate-100 px-3 py-1 rounded-full neu-shadow-inset">{exp.date}</span>
                            </div>
                            <p class="text-sm font-bold text-slate-600 mb-3 uppercase tracking-wide opacity-80">{exp.company}</p>
                            <p class="text-slate-500 leading-relaxed font-light text-sm">{exp.desc}</p>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </main>
</Layout>